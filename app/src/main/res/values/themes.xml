<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PersonalVocab" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/levander</item>
        <item name="colorPrimaryVariant">@color/levander</item>

        <item name="colorOnPrimary">@color/black</item>

    </style>

    <style name="Theme.PersonalVocab" parent="Base.Theme.PersonalVocab" />


    <style name="ThemeOverlay.PersonalVocab.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.PersonalVocab.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PersonalVocab.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PersonalVocab.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>